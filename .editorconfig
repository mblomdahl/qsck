# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Set default charset
[*.{py,cfg,md}]
charset = utf-8
trim_trailing_whitespace = true
max_line_length = 80
indent_style = space
indent_size = 4
